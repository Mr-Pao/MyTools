/**app.wxss**/
page {
  /* 背景色 */
  background-color: var(--background-color);
  --background-color: #f5f5f5;
  --background-color-black: #222;
  /* 主题色 */
  --theme-color: #ffa631;
  /* 阴影色 */
  --shadow-color: #EBEBEB;
  /* 文字颜色 */
  --text-color: #555555;
  --text-color2: #EBEBEB;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  overflow-x: hidden;
  flex-wrap: wrap; /* 换行 */
} 

/* 全局字体 */
body {
  font-family: Arial, sans-serif;
}

/* 全局链接颜色 */
a {
  color: #007bff;
  text-decoration: none;
}

/* 全局按钮样式 */
button {
  border: 1px solid #e0e0e0;
  padding: 8px 16px;
  background-color: #f5f5f5;
  color: #333333;
  cursor: pointer;
}

/* 返回按钮 */
.home-button {
  position: fixed;
  top: 105rpx;
  left: 50rpx;
}
.home-button-image {
  width: 25px;
  height: 25px;
}