<view class="container">
  <block wx:for="{{peise}}" wx:key="palette_id">
    <view class="palette">
      <text class="palette-title">{{item.palette_id}}</text>
      <block wx:for="{{item.colors}}" wx:key="index">
        <view class="circle {{index === selectedIndex ? 'selected animation' : ''}}" style="background-color: {{item}};" bindtap="selectColor" data-palette-index="{{itemIndex}}" data-color-index="{{index}}"></view>
      </block>
    </view>
  </block>
</view>
